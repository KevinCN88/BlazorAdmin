<MudPaper class="d-flex align-center mb-2 px-4 py-2">
    <MudText Typo="Typo.h6" Style="white-space:nowrap;">
        @Title
    </MudText>
    <MudSpacer />
    @ChildContent
</MudPaper>

@code {

    [Parameter] public string? Title { get; set; }

    [Parameter] public RenderFragment? ChildContent { get; set; }
}